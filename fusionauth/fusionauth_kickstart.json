{
    "variables": {
        "adminEmail": "#{ENV.ADMIN_EMAIL}",
        "adminPassword": "#{ENV.ADMIN_PASSWORD}",
        "apiKey": "#{ENV.FA_API_KEY}",
        "applicationId": "#{ENV.FUSIONAUTH_APPLICATION_ID}",
        "adminId": "#{ENV.FA_ADMIN_ID}",
        "defaultTenantId" : "#{ENV.TENANT_ID}",
        "lambdaId": "#{ENV.LAMBDA_ID}"
    },
    "apiKeys": [
        {
            "key": "#{apiKey}",
            "description": "API Key for production"
        }
    ],
    "requests": [
        {
            "method": "POST",
            "url": "/api/lambda/#{lambdaId}",
            "body": {
                "lambda": {
                    "body": "@{custom_files/jwt_populate.txt}",
                    "enabled": true,
                    "debug": true,
                    "name": "custom fields",
                    "type": "JWTPopulate"
                }
            }
        },
        
        
        {
            "method": "POST",
            "url": "/api/application/#{applicationId}",
            "body": {
                "application": {
                    "name": "prosodyapp",
                    "active": true,
                    "jwtConfiguration": {
                        "enabled": true,
                        "refreshTokenTimeToLiveInMinutes": 43200,
                        "timeToLiveInSeconds": 86400,
                        "refreshTokenExpirationPolicy": "SlidingWindow",
                        "refreshTokenUsagePolicy": "Reusable"
                    },
                    "loginConfiguration": {
                        "allowTokenRefresh": true,
                        "generateRefreshTokens": true,
                        "requireAuthentication": true
                    },
                    "lambdaConfiguration": {
                        "accessTokenPopulateId": "#{lambdaId}",
                        "idTokenPopulateId": "#{lambdaId}"
                    },
                    "registrationConfiguration": {
                        "enabled": false
                    },
                    "roles": [
                        {
                            "name": "admin"
                        },
                        {
                            "name": "user"
                        }
                    ],
                    "verifyRegistration": false
                }
            }
        },
        {
            "method": "PATCH",
            "url": "/api/tenant/#{FUSIONAUTH_TENANT_ID}",
            "body": {
                "tenant": {
                    "emailConfiguration": {
                        "verifyEmail": false
                    },
                    "jwtConfiguration": {
                        "enabled": true,
                        "timeToLiveInSeconds": 86400,
                        "refreshTokenTimeToLiveInMinutes": 43200,
                        "refreshTokenUsagePolicy": "Reusable",
                        "refreshTokenExpirationPolicy": "SlidingWindow"
                    },
                    "passwordValidationRules": {
                        "rememberPreviousPasswords": {
                            "enabled": true,
                            "count": 1
                        }
                    },
                    "eventConfiguration": {
                        "events": {
                            "user.reactivate": {
                                "enabled": true,
                                "transactionType": "Any"
                            },
                            "user.registration.create": {
                                "enabled": true,
                                "transactionType": "Any"
                            },
                            "user.delete": {
                                "enabled": true,
                                "transactionType": "Any"
                            },
                            "user.deactivate": {
                                "enabled": true,
                                "transactionType": "Any"
                            },
                            "group.create.complete": {
                                "enabled": true
                            },
                            "group.update.complete": {
                                "enabled": true
                            },
                            "group.delete.complete": {
                                "enabled": true
                            },
                            "group.member.add.complete": {
                                "enabled": true
                            },
                            "group.member.remove.complete": {
                                "enabled": true
                            },
                            "group.member.update.complete": {
                                "enabled": true
                            }
                        }
                    }
                }
            }
        },
        {
            "method": "POST",
            "url": "/api/user/registration/#{adminId}",
            "body": {
                "user": {
                    "email": "#{adminEmail}",
                    "firstName": "dolphinVC",
                    "lastName": "admin",
                    "password": "#{adminPassword}"
                },
                "registration": {
                    "applicationId": "#{FUSIONAUTH_APPLICATION_ID}",
                    "roles": [
                        "admin"
                    ]
                }
            }
        }
    ]
}